<package>
	<description brief="husky_gazebo_plugins">
		Clearpath Husky A200 Robot Description
	</description>
	<author>Ryan Gariepy/Clearpath Robotics</author>
	<license>BSD</license>
	<review status="unreviewed" notes=""/>
	<url>http://ros.org/wiki/husky_gazebo_plugins</url>
	<!--ROS specific-->
	<depend package="std_msgs"/>
	<depend package="roscpp"/>
	<depend package="tf"/>
	<!--Gazebo specific-->
	<depend package="gazebo" />
	<depend package="gazebo_tools" />
